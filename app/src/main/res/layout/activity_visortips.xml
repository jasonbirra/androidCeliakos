<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".visortips">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="395dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="32dp">

        <ImageView
            android:id="@+id/tipsimgGrande"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            app:srcCompat="@drawable/tipsicon" />

        <TextView
            android:id="@+id/tipstituloText"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:gravity="center_horizontal|top"
            android:paddingHorizontal="25dp"
            android:paddingVertical="30dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#F8F4E6"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tipsdetalleText"
            android:layout_width="366dp"
            android:layout_height="332dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="425dp"
            android:gravity="center_horizontal|top|center_vertical"
            android:justificationMode="inter_word"
            android:paddingHorizontal="25dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#F3F2F0"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>